<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">




    <item>
        <shape>
            <padding android:top="10dp" android:right="10dp" android:bottom="5dp" android:left="10dp" />
            <solid android:color="#00000000" />
        </shape>
    </item>

    <item>
        <shape>
            <padding android:top="0dp" android:right="0dp" android:bottom="1dp" android:left="0dp" />
            <solid android:color="#70000000" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item

        android:top="0dp" android:right="0dp" android:bottom="1dp" android:left="0dp">
        <shape>

            <solid android:color="#bdbdbd" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape >
            <gradient
                android:angle="180"

                android:startColor="#37474F"

                android:endColor="#000000"/>


            <corners android:radius="2dp" />
        </shape>
    </item>

</layer-list>